# CloudGreet Environment Variables
# Copy this file to .env.local and fill in your actual values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
JWT_SECRET=your-jwt-secret-here-minimum-32-characters
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# AI SERVICES
# =============================================================================
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_API_BASE_URL=https://api.openai.com/v1
RETELL_API_KEY=your-retell-api-key-here
RETELL_WEBHOOK_SECRET=your-retell-webhook-secret-here

# =============================================================================
# TELECOMMUNICATIONS
# =============================================================================
TELNYX_API_KEY=your-telnyx-api-key-here
TELNYX_PHONE_NUMBER=+1234567890
TELNYX_CONNECTION_ID=your-telnyx-connection-id-here
TELNYX_WEBHOOK_SECRET=your-telnyx-webhook-secret-here

# =============================================================================
# PAYMENT PROCESSING
# =============================================================================
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret-here

# =============================================================================
# EMAIL SERVICES
# =============================================================================
RESEND_API_KEY=re_your-resend-api-key-here
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
MAILGUN_API_KEY=your-mailgun-api-key-here
MAILGUN_DOMAIN=your-mailgun-domain-here

# =============================================================================
# CALENDAR INTEGRATIONS
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
MICROSOFT_CLIENT_ID=your-microsoft-client-id-here
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret-here

# =============================================================================
# CACHING & STORAGE
# =============================================================================
REDIS_URL=redis://localhost:6379
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-upstash-token-here

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
SENTRY_DSN=https://your-sentry-dsn-here
DATADOG_API_KEY=your-datadog-api-key-here
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key-here

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
TWILIO_ACCOUNT_SID=your-twilio-account-sid-here
TWILIO_AUTH_TOKEN=your-twilio-auth-token-here
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
PORT=3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false
ENABLE_RATE_LIMITING=true
ENABLE_CACHING=true

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
SESSION_TIMEOUT=3600000

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================
# Only use these in development/testing environments
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/cloudgreet_test
TEST_REDIS_URL=redis://localhost:6379/1
SKIP_ENV_VALIDATION=false

# =============================================================================
# WEBHOOK ENDPOINTS
# =============================================================================
RETELL_WEBHOOK_URL=https://your-domain.com/api/retell/webhook
TELNYX_WEBHOOK_URL=https://your-domain.com/api/telnyx/webhook
STRIPE_WEBHOOK_URL=https://your-domain.com/api/stripe/webhook

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================
BACKUP_S3_BUCKET=your-backup-bucket-here
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1

# =============================================================================
# COMPLIANCE & LEGAL
# =============================================================================
PRIVACY_POLICY_URL=https://your-domain.com/privacy
TERMS_OF_SERVICE_URL=https://your-domain.com/terms
GDPR_CONSENT_REQUIRED=true
TCPA_COMPLIANCE_MODE=true
