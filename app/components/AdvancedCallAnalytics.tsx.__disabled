'use client'

import React, { useState, useEffect, useMemo, useCallback } from 'react'
import { motion } from 'framer-motion'
import { Phone, Clock, TrendingUp, Users, Calendar, DollarSign, BarChart3, Activity, AlertCircle, RefreshCw } from 'lucide-react'
import { Card } from './ui/Card'
import { ChartSkeleton, HeatmapSkeleton } from './ui/Skeleton'
import { LoadingSpinner, LoadingOverlay } from './ui/LoadingIndicators'
import { logger } from '@/lib/monitoring'
import { CloudGreetError, errorHandlers, ERROR_MESSAGES, createRetryHandler } from '@/lib/error-handling'
import { safeClassUtils } from '@/lib/design-system/safe-classes'
import { microInteractions, animationUtils } from '@/lib/design-system/animations'

interface CallAnalyticsData {
  callVolumeHeatmap: Array<{
    hour: number
    day: string
    calls: number
  }>
  callDurationTrend: Array<{
    date: string
    avgDuration: number
  }>
  conversionFunnel: {
    calls: number
    qualified: number
    booked: number
    completed: number
  },
  sentimentAnalysis: {
    positive: number
    neutral: number
    negative: number
  }
  peakHours: Array<{
    hour: string
    calls: number
    recommendation: string
  }>
}

interface AdvancedCallAnalyticsProps {
  businessId: string
  className?: string
}

export default React.memo(function AdvancedCallAnalytics({ businessId, className = '' }: AdvancedCallAnalyticsProps) {
  const [data, setData] = useState<CallAnalyticsData | null>(null)
  const [loading, setLoading] = useState(true)
  const [selectedTimeframe, setSelectedTimeframe] = useState<'7d' | '30d' | '90d'>('30d')
  const [error, setError] = useState<CloudGreetError | null>(null)
  const [retryCount, setRetryCount] = useState(0)

  useEffect(() => {
    loadAnalytics()
  }, [businessId, selectedTimeframe])

  const loadAnalytics = useCallback(async () => {
    try {
      setLoading(true)
      setError(null)
      const token = localStorage.getItem('token')

      if (!token) {
        throw new CloudGreetError(
          ERROR_MESSAGES.UNAUTHORIZED,
          'NO_TOKEN',
          'permission',
          false,
          'login'
        )
      }

    catch (error) {

      console.error('Error:', error);

      throw error;

    }

      const response = await fetch(`/api/analytics/call-analytics?businessId=${businessId}&timeframe=${selectedTimeframe}`, {
        headers: { 'Authorization': `Bearer ${token}` }
      })

      if (!response.ok) {
        if (response.status === 401) {
          throw new CloudGreetError(
            ERROR_MESSAGES.UNAUTHORIZED,
            'UNAUTHORIZED',
            'permission',
            false,
            'login'
          )
        } else if (response.status === 403) {
          throw new CloudGreetError(
            ERROR_MESSAGES.FORBIDDEN,
            'FORBIDDEN',
            'permission',
            false,
            'contact_admin'
          )
        } else if (response.status === 429) {
          throw new CloudGreetError(
            ERROR_MESSAGES.RATE_LIMITED,
            'RATE_LIMITED',
            'network',
            true,
            'retry'
          )
        } else {
          throw new CloudGreetError(
            ERROR_MESSAGES.SERVER_ERROR,
            'SERVER_ERROR',
            'network',
            true,
            'retry'
          )
        }
      }

      const result = await response.json()
      setData(result.analytics)
      setRetryCount(0) // Reset retry count on success
    } )
    } finally {
      setLoading(false)
    }
  }, [businessId, selectedTimeframe])

  const formatTime = useCallback((hour: number) => {
    return `${hour.toString().padStart(2, '0')}:00`
  }, [])

  const maxCalls = useMemo(() => {
    return data?.callVolumeHeatmap ? Math.max(...data.callVolumeHeatmap.map(item => item.calls)) : 0
  }, [data?.callVolumeHeatmap])

  const heatmapData = useMemo(() => {
    if (!data?.callVolumeHeatmap) return []
    
    return data.callVolumeHeatmap.map(item => ({
      ...item,
      intensity: maxCalls > 0 ? item.calls / maxCalls : 0
    }))
  }, [data?.callVolumeHeatmap, maxCalls])

  const getHeatmapColor = (calls: number, maxCalls: number) => {
    if (calls === 0) return 'bg-gray-800/30'
    const intensity = calls / maxCalls
    return safeClassUtils.getHeatmapIntensity(intensity)
  }

  if (loading) {
    return (
      <div className={`space-y-6 ${className}`}>
        <div className="flex items-center justify-between">
          <h2 className="text-2xl font-bold text-white flex items-center gap-2">
            <BarChart3 className="w-6 h-6 text-purple-400" />
            Advanced Call Analytics
          </h2>
          <div className="flex gap-2">
            {(['7d', '30d', '90d'] as const).map((timeframe) => (
              <div key={timeframe} className="px-3 py-1 bg-gray-700/50 rounded-lg animate-pulse">
                <div className="h-4 w-12 bg-gray-600/50 rounded"></div>
              </div>
            ))}
          </div>
        </div>
        
        <HeatmapSkeleton />
        <ChartSkeleton />
        <ChartSkeleton />
      </div>
    )
  }

  if (error) {
    return (
      <div className={`${className}`}>
        <Card className="p-8 text-center">
          <motion.div
            initial={{ scale: 0.9, opacity: 0 }}
            animate={{ scale: 1, opacity: 1 }}
            transition={{ duration: 0.3, ease: 'easeOut' }}
          >
            <AlertCircle className="w-16 h-16 mx-auto mb-6 text-red-500" />
            <h3 className="text-xl font-semibold text-white mb-3">Unable to Load Analytics</h3>
            <p className="text-gray-400 mb-6 max-w-md mx-auto">
              {error.message}
            </p>
            <div className="flex flex-col sm:flex-row gap-3 justify-center">
              {error.retryable && (
                <motion.button 
                  whileHover={microInteractions.button.primary.whileHover}
                  whileTap={microInteractions.button.primary.whileTap}
                  onClick={() => {
                    setRetryCount(prev => prev + 1)
                    loadAnalytics()
                  }}
                  className="px-6 py-3 bg-purple-600 text-white rounded-lg hover:bg-purple-700 transition-colors font-medium flex items-center gap-2"
                >
                  <RefreshCw className="w-4 h-4" />
                  Try Again {retryCount > 0 && `(${retryCount})`}
                </motion.button>
              )}
              {error.action === 'login' && (
                <motion.button 
                  whileHover={microInteractions.button.secondary.whileHover}
                  whileTap={microInteractions.button.secondary.whileTap}
                  onClick={() => window.location.href = '/login'}
                  className="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium"
                >
                  Log In
                </motion.button>
              )}
              {error.action === 'contact_admin' && (
                <motion.button 
                  whileHover={microInteractions.button.ghost.whileHover}
                  whileTap={microInteractions.button.ghost.whileTap}
                  onClick={() => window.open('/contact', '_blank')}
                  className="px-6 py-3 bg-gray-700 text-white rounded-lg hover:bg-gray-600 transition-colors font-medium"
                >
                  Contact Support
                </motion.button>
              )}
            </div>
          </motion.div>
        </Card>
      </div>
    )
  }

  return (
    <div className={`space-y-6 ${className}`}>
      {/* Header */}
      <div className="flex items-center justify-between">
        <h2 className="text-2xl font-bold text-white flex items-center gap-2">
          <BarChart3 className="w-6 h-6 text-purple-400" />
          Advanced Call Analytics
        </h2>
        
        <div className="flex gap-2">
          {(['7d', '30d', '90d'] as const).map((timeframe) => (
            <motion.button
              key={timeframe}
              onClick={() => setSelectedTimeframe(timeframe)}
              className={`px-3 py-1 rounded-lg text-sm font-medium transition-colors ${
                selectedTimeframe === timeframe
                  ? 'bg-purple-600 text-white'
                  : 'bg-gray-700 text-gray-300 hover:bg-gray-600'
              }`}
              aria-label={`Select ${timeframe} timeframe`}
              role="tab"
              aria-selected={selectedTimeframe === timeframe}
              tabIndex={0}
              whileHover={microInteractions.button.primary.whileHover}
              whileTap={microInteractions.button.primary.whileTap}
              transition={microInteractions.button.primary.transition}
            >
              {timeframe === '7d' ? '7 Days' : timeframe === '30d' ? '30 Days' : '90 Days'}
            </motion.button>
          ))}
        </div>
      </div>

      {/* Call Volume Heatmap */}
      <Card className="p-6" role="region" aria-label="Call volume heatmap">
        <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
          <Phone className="w-5 h-5 text-blue-400" />
          Call Volume Heatmap
        </h3>
        
        <div className="grid grid-cols-8 gap-2" role="grid" aria-label="Call volume by hour and day">
          {/* Days header */}
          <div></div>
          {['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'].map((day) => (
            <div key={day} className="text-xs text-gray-400 text-center font-medium">
              {day}
            </div>
          ))}
          
          {/* Heatmap grid */}
          {Array.from({ length: 24 }, (_, hour) => (
            <React.Fragment key={hour}>
              <div className="text-xs text-gray-400 font-medium flex items-center">
                {formatTime(hour)}
              </div>
              {['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'].map((day) => {
                const heatmapData = data?.callVolumeHeatmap?.find(
                  h => h.hour === hour && h.day === day
                )
                const calls = heatmapData?.calls || 0
                
                return (
                  <div
                    key={`${day}-${hour}`}
                    className={`w-6 h-6 sm:w-8 sm:h-8 rounded ${getHeatmapColor(calls, maxCalls)} flex items-center justify-center text-xs font-medium text-white`}
                    title={`${day} ${formatTime(hour)}: ${calls} calls`}
                  >
                    {calls > 0 && calls}
                  </div>
                )
              })}
            </React.Fragment>
          ))}
        </div>
        
        <div className="flex items-center gap-4 mt-4 text-sm text-gray-400">
          <span>Less</span>
          <div className="flex gap-1">
            {[0, 0.2, 0.4, 0.6, 0.8, 1].map((intensity) => (
              <div
                key={intensity}
                className={`w-4 h-4 rounded ${getHeatmapColor(intensity * maxCalls, maxCalls)}`}
              />
            ))}
          </div>
          <span>More</span>
        </div>
      </Card>

      {/* Conversion Funnel */}
      <Card className="p-6">
        <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
          <TrendingUp className="w-5 h-5 text-green-400" />
          Conversion Funnel
        </h3>
        
        <div className="space-y-4">
          {[
            { label: 'Total Calls', value: data?.conversionFunnel?.calls || 0, color: 'blue' },
            { label: 'Qualified Leads', value: data?.conversionFunnel?.qualified || 0, color: 'yellow' },
            { label: 'Appointments Booked', value: data?.conversionFunnel?.booked || 0, color: 'orange' },
            { label: 'Appointments Completed', value: data?.conversionFunnel?.completed || 0, color: 'green' }
          ].map((step, index) => {
            const percentage = index === 0 ? 100 : (step.value / (data?.conversionFunnel?.calls || 1)) * 100
            const prevValue = index === 0 ? step.value : [
              data?.conversionFunnel?.calls || 0,
              data?.conversionFunnel?.qualified || 0,
              data?.conversionFunnel?.booked || 0
            ][index - 1]
            const conversionRate = index === 0 ? 100 : (step.value / prevValue) * 100
            
            return (
              <div key={step.label} className="relative">
                <div className="flex items-center justify-between mb-2">
                  <span className="text-sm font-medium text-white">{step.label}</span>
                  <div className="text-right">
                    <span className="text-lg font-bold text-white">{step.value}</span>
                    <span className="text-sm text-gray-400 ml-2">
                      ({conversionRate.toFixed(1)}%)
                    </span>
                  </div>
                </div>
                
                <div className="w-full bg-gray-700 rounded-full h-3 overflow-hidden">
                  <div
                    className={`h-full transition-all duration-1000 ${
                      step.color === 'blue' ? 'bg-gradient-to-r from-blue-500 to-blue-400' :
                      step.color === 'yellow' ? 'bg-gradient-to-r from-yellow-500 to-yellow-400' :
                      step.color === 'orange' ? 'bg-gradient-to-r from-orange-500 to-orange-400' :
                      'bg-gradient-to-r from-green-500 to-green-400'
                    }`}
                    style={{ width: `${percentage}%` }}
                  />
                </div>
              </div>
            )
          })}
        </div>
      </Card>

      {/* Sentiment Analysis */}
      <div className="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <Card className="p-6">
          <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
            <Users className="w-5 h-5 text-purple-400" />
            Call Sentiment
          </h3>
          
          <div className="space-y-4">
            {[
              { label: 'Positive', value: data?.sentimentAnalysis?.positive || 0, color: 'green' },
              { label: 'Neutral', value: data?.sentimentAnalysis?.neutral || 0, color: 'yellow' },
              { label: 'Negative', value: data?.sentimentAnalysis?.negative || 0, color: 'red' }
            ].map((sentiment) => {
              const total = (data?.sentimentAnalysis?.positive || 0) + (data?.sentimentAnalysis?.neutral || 0) + (data?.sentimentAnalysis?.negative || 0)
              const percentage = total > 0 ? (sentiment.value / total) * 100 : 0
              
              return (
                <div key={sentiment.label} className="flex items-center justify-between">
                  <span className="text-sm text-gray-300">{sentiment.label}</span>
                  <div className="flex items-center gap-3">
                    <div className="w-24 bg-gray-700 rounded-full h-2">
                      <div
                        className={`h-full rounded-full transition-all duration-1000 ${
                          sentiment.color === 'green' ? 'bg-green-500' :
                          sentiment.color === 'yellow' ? 'bg-yellow-500' :
                          'bg-red-500'
                        }`}
                        style={{ width: `${percentage}%` }}
                      />
                    </div>
                    <span className="text-sm font-medium text-white w-12 text-right">
                      {percentage.toFixed(1)}%
                    </span>
                  </div>
                </div>
              )
            })}
          </div>
        </Card>

        <Card className="p-6">
          <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
            <Clock className="w-5 h-5 text-orange-400" />
            Peak Hours
          </h3>
          
          <div className="space-y-3">
            {data?.peakHours?.slice(0, 5).map((peak, index) => (
              <div key={peak.hour} className="flex items-center justify-between">
                <div>
                  <span className="text-sm font-medium text-white">{peak.hour}</span>
                  <p className="text-xs text-gray-400">{peak.recommendation}</p>
                </div>
                <div className="text-right">
                  <span className="text-sm font-bold text-white">{peak.calls}</span>
                  <span className="text-xs text-gray-400 ml-1">calls</span>
                </div>
              </div>
            ))}
          </div>
        </Card>
      </div>

      {/* Call Duration Trend */}
      <Card className="p-6">
        <h3 className="text-lg font-semibold text-white mb-4 flex items-center gap-2">
          <Calendar className="w-5 h-5 text-indigo-400" />
          Average Call Duration Trend
        </h3>
        
        <div className="h-64 flex items-end gap-1">
          {data?.callDurationTrend?.map((point, index) => {
            const maxDuration = Math.max(...(data?.callDurationTrend?.map(p => p.avgDuration) || [0]))
            const height = (point.avgDuration / maxDuration) * 100
            
            return (
              <div key={index} className="flex-1 flex flex-col items-center">
                <div
                  className="w-full bg-gradient-to-t from-purple-600 to-purple-400 rounded-t transition-all duration-1000"
                  style={{ height: `${height}%` }}
                  title={`${point.date}: ${Math.round(point.avgDuration)}s`}
                />
                <span className="text-xs text-gray-400 mt-2 transform -rotate-45 origin-left">
                  {new Date(point.date).toLocaleDateString('en-US', { month: 'short', day: 'numeric' })}
                </span>
              </div>
            )
          })}
        </div>
      </Card>
    </div>
  )
})
